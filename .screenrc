# Escape key is C-t
escape ^L^L

# scrollback default = 100
defscrollback 100

# startup message
startup_message off

# change the kind of message to the nethack-style
nethack on

vbell on

#defmonitor on
#activity "!!!"

# ステータスライン
shelltitle "$ |zsh"
